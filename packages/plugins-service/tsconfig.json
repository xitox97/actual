{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "WebWorker", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["vite/client"],
    "outDir": "dist",
    "rootDir": "src",
    "plugins": [{ "name": "typescript-strict-plugin", "paths": ["."] }]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
